<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/focus_style">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@android:color/white">

        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="9.5dp"
                android:layout_height="18dp"
                android:src="@mipmap/black_bank"
                android:layout_marginRight="20dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喜好"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>

    <com.zxdc.utils.library.view.MyRefreshLayout
        android:id="@+id/re_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="40dp">

        <com.moxun.tagcloudlib.view.TagCloudView
            android:id="@+id/cloudView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/focus_style"
            app:autoScrollMode="uniform"
            app:darkColor="#ff00ff00"
            app:lightColor="#ffff0000"
            app:radiusPercent="0.8"
            app:scrollSpeed="3">
        </com.moxun.tagcloudlib.view.TagCloudView>

     </com.zxdc.utils.library.view.MyRefreshLayout>

    <com.zxdc.utils.library.view.ClickTextView
        android:id="@+id/tv_confirm"
        android:layout_width="175dp"
        android:layout_height="42dp"
        android:text="确定"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:gravity="center"
        android:background="@color/color_b09b7c"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

</RelativeLayout>
