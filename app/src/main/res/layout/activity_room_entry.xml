<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/room_entry_bg"
        android:layout_marginTop="-15dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="9.5dp"
                android:layout_height="18dp"
                android:layout_marginRight="20dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="房型与爱好"
            android:textSize="17sp"
            android:textColor="@android:color/white"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/tv_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跳过"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/room_entry"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="根据您的房屋类型我们"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            android:layout_marginTop="45.5dp"
            android:layout_marginLeft="26dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐给您合适的风格"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="26dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="290dp">

        <RelativeLayout
            android:id="@+id/rel_room"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="户型"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_room"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请选择您的户型"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="30dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/black_sj"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_D9D9D9"
            android:layout_marginRight="37dp"
            android:layout_marginLeft="37dp"/>

        <RelativeLayout
            android:id="@+id/rel_area"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="37dp"
            android:layout_marginRight="37dp"
            android:layout_marginTop="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="房屋面积"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/tv_area"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="请选择您的房屋面积"
                android:textColor="@color/color_666666"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="30dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/black_sj"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_D9D9D9"
            android:layout_marginRight="37dp"
            android:layout_marginLeft="37dp"/>

        <com.zxdc.utils.library.view.ClickTextView
            android:id="@+id/tv_cofirm"
            android:layout_width="247dp"
            android:layout_height="34dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/color_b09b7c"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="确定"
            android:textSize="14sp"
            android:textColor="@android:color/white"/>

    </LinearLayout>


</RelativeLayout>
