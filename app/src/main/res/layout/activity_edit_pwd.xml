<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <LinearLayout
            android:id="@+id/lin_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="9.5dp"
                android:layout_height="18dp"
                android:src="@mipmap/black_bank"
                android:layout_marginRight="20dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:textSize="17sp"
            android:textColor="@android:color/black"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="113dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="旧密码"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/et_old_pwd"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:hint="请输入旧密码"
            android:maxLength="12"
            android:background="@null"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:textColor="@color/color_b09b7c"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@color/color_999999"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新密码"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/et_new_pwd"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:hint="请输入6-12位数字加英文"
            android:maxLines="1"
            android:maxLength="12"
            android:ellipsize="end"
            android:background="@null"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:textColor="@color/color_b09b7c"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@color/color_999999"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认新密码"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:layout_centerVertical="true"/>

        <EditText
            android:id="@+id/et_new_pwd2"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:hint="请输入6-12位数字加英文"
            android:maxLines="1"
            android:maxLength="12"
            android:ellipsize="end"
            android:background="@null"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:textColor="@color/color_b09b7c"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:background="@color/color_999999"/>

    <com.zxdc.utils.library.view.ClickTextView
        android:id="@+id/tv_confirm"
        android:layout_width="197dp"
        android:layout_height="37dp"
        android:text="确认修改"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="70dp"
        android:background="@color/color_b09b7c"
        android:gravity="center"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
