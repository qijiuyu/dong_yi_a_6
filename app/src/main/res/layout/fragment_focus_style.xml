<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/focus_style">

   <com.moxun.tagcloudlib.view.TagCloudView
       android:id="@+id/cloudView"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:background="@mipmap/focus_style"
       android:layout_marginTop="10dp"
       android:layout_marginBottom="40dp"
       app:autoScrollMode="uniform"
       app:darkColor="#ff00ff00"
       app:lightColor="#ffff0000"
       app:radiusPercent="0.8"
       app:scrollSpeed="3">
   </com.moxun.tagcloudlib.view.TagCloudView>

   <com.zxdc.utils.library.view.ClickTextView
       android:id="@+id/tv_add"
       android:layout_width="175dp"
       android:layout_height="42dp"
       android:text="确认添加"
       android:textColor="@android:color/black"
       android:textSize="15sp"
       android:gravity="center"
       android:background="@color/color_b09b7c"
       android:layout_alignParentBottom="true"
       android:layout_centerHorizontal="true"
       android:layout_marginBottom="20dp"/>

</RelativeLayout>
